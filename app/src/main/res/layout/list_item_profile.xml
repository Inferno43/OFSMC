<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4">
        <ImageView
            android:id="@+id/emp_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:layout_margin="@dimen/margin_4"/>
        <TextView
            android:id="@+id/emp_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emp_Image"
            android:layout_alignStart="@+id/emp_Image"
            android:layout_alignEnd="@+id/emp_Image"
            android:gravity="center"
            android:textSize="@dimen/textNormal"
            android:layout_margin="@dimen/margin_4"/>
        <LinearLayout
            android:layout_toEndOf="@+id/emp_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_4">

            <TextView
                android:id="@+id/emp_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textPrimary"/>

            <TextView
                android:id="@+id/emp_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSecondary" />
            <TextView
                android:id="@+id/emp_Department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textNormal" />
            <TextView
                android:id="@+id/emp_Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textNormal" />
            <TextView
                android:id="@+id/emp_Extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textNormal" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>