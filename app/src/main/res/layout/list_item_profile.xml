<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/card_radius"
    android:layout_margin="@dimen/margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_4"
        android:background="@drawable/button_bg">
        <ImageView
            android:id="@+id/emp_Image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:padding="2dp"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_4"/>
        <TextView
            android:id="@+id/emp_Id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/emp_Image"
            android:layout_alignEnd="@+id/emp_Image"
            android:gravity="center"
            android:textSize="@dimen/textNormal"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/margin_4"/>
        <LinearLayout
            android:layout_toEndOf="@+id/emp_Image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/margin_4">

            <TextView
                android:id="@+id/emp_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textPrimary"/>

            <TextView
                android:id="@+id/emp_Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSecondary"
                android:drawablePadding="@dimen/padding_4"
                android:padding="@dimen/padding_4"
                android:drawableStart="@drawable/ic_email"/>
            <TextView
                android:id="@+id/emp_Department"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textNormal"
                android:drawablePadding="@dimen/padding_4"
                android:padding="@dimen/padding_4"
                android:drawableStart="@drawable/ic_work"
                />
            <TextView
                android:id="@+id/emp_Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textNormal"
                android:drawablePadding="@dimen/padding_4"
                android:padding="@dimen/padding_4"
                android:drawableStart="@drawable/ic_place"/>
            <TextView
                android:id="@+id/emp_Extension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textNormal"
                android:drawablePadding="@dimen/padding_4"
                android:padding="@dimen/padding_4"
                android:drawableStart="@drawable/ic_phone"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>